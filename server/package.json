{
  "name": "server",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production bun run src/index.ts",
    "dev": "NODE_ENV=development bun --watch run src/index.ts",
		"build:front": "rm -rf dist && cd ../client && rm -rf dist && npm run build && cp -r dist ../server",
		"build:back": "rm -rf out && bun build ./src/index.ts --outdir ./out --target node",
    "build": "bun run build:front && bun run build:back",
		"prod": "NODE_ENV=production bun run out/index.js",
    "test": "NODE_ENV=test bun run out/index.js",
    "clean": "rm -rf node_modules .bun bun.lockb dist"
  },
  "devDependencies": {
    "@types/bun": "^1.1.12",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.9.1",
    "morgan": "^1.10.0",
    "ts-node": "^10.9.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "colorette": "^2.0.20",
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "pg": "^8.13.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.5"
  }
}
